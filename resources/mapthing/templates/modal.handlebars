      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
      <h3>{{title}}</h3>
    </div>
    <div class="modal-body">
      {{content}}
    </div>
    <div class="modal-footer">
      {{footer}}
    </div>
</div>
